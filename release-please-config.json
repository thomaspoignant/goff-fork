{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "monorepo-tags": true,
    "separate-pull-requests": true,
    "include-v-in-tag": true,
    "tag-separator": "/",
    "packages": {
        ".": {
            "release-type": "go",
            "include-component-in-tag": false,
            "changelog-path": "CHANGELOG.md",
            "path": ".",
            "exclude-paths": [
                "module/evaluation",
                "openfeature/providers/kotlin-provider"
            ]
        },
        "module/evaluation": {
            "release-type": "go",
            "include-component-in-tag": true,
            "component": "module/evaluation",
            "changelog-path": "module/evaluation/CHANGELOG.md"
        },
        "openfeature/providers/kotlin-provider": {
            "release-type": "java",
            "include-component-in-tag": true,
            "component": "openfeature/providers/kotlin-provider",
            "changelog-path": "openfeature/providers/kotlin-provider/CHANGELOG.md",
            "extra-files": [
                "gradle.properties",
                "build.gradle.kts",
                "README.md"
            ]
        }
    }
}