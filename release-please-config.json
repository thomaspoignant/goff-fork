{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "monorepo-tags": true,
    "separate-pull-requests": true,
    "include-v-in-tag": true,
    "tag-separator": "/",
    "changelog-sections": [
        {
            "type": "fix",
            "section": "üêõ Bug Fixes"
        },
        {
            "type": "feat",
            "section": "üöÄ New Features"
        },
        {
            "type": "chore",
            "section": "üîß Chores"
        },
        {
            "type": "docs",
            "section": "üìö Documentation"
        }
    ],
    "packages": {
        ".": {
            "release-type": "go",
            "include-component-in-tag": false,
            "changelog-path": "CHANGELOG.md",
            "path": ".",
            "exclude-paths": [
                "module/evaluation",
                "openfeature/providers/kotlin-provider",
                "openfeature/providers/python-provider"
            ]
        },
        "module/evaluation": {
            "release-type": "go",
            "include-component-in-tag": true,
            "component": "module/evaluation",
            "changelog-path": "module/evaluation/CHANGELOG.md"
        },
        "openfeature/providers/kotlin-provider": {
            "release-type": "java",
            "include-component-in-tag": true,
            "component": "openfeature/providers/kotlin-provider",
            "changelog-path": "openfeature/providers/kotlin-provider/CHANGELOG.md",
            "skip-snapshot": true,
            "extra-files": [
                "gradle.properties",
                "build.gradle.kts",
                "README.md"
            ]
        },
        "openfeature/providers/python-provider": {
            "release-type": "python",
            "include-component-in-tag": true,
            "component": "openfeature/providers/python-provider",
            "changelog-path": "openfeature/providers/python-provider/CHANGELOG.md",
            "extra-files": [
                "pyproject.toml",
                "README.md"
            ]
        }
    }
}